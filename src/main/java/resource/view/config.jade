extends base

block header
	link(href="/css/config.css", rel="stylesheet")

block title-area
	h3 configuration

block contents-area
	div.row
		div.col-lg-6.col-md-12
			div.panel.panel-default
				div.panel-heading
					span.glyphicon.glyphicon-cog
					span general
				div.panel-body
					span.config-key version check
					span
						label
							input(type="radio", name="version-check", value="true")
							span true
						label
							input(type="radio", name="version-check", value="false")
							span false
					hr
					div
						button.btn.btn-primary.btn-sm.pull-right(type="button", onclick="controller.saveGeneralConfig();") save
						div.clearfix

		div.col-lg-6.col-md-12
			div.panel.panel-default
				div.panel-heading
					span.glyphicon.glyphicon-cog
					span script editor
				div.panel-body
					span.config-key theme
					span
						select#select-script-editor-theme
							option(value="default") default
							option(value="3024-day") 3024-day
							option(value="3024-night") 3024-night
							option(value="abcdef") abcdef
							option(value="ambiance") ambiance
							option(value="base16-dark") base16-dark
							option(value="base16-light") base16-light
							option(value="blackboard") blackboard
							option(value="cobalt") cobalt
							option(value="colorforth") colorforth
							option(value="dracula") dracula
							option(value="eclipse") eclipse
							option(value="elegant") elegant
							option(value="erlang-dark") erlang-dark
							option(value="icecoder") icecoder
							option(value="lesser-dark") lesser-dark
							option(value="material") material
							option(value="mbo") mbo
							option(value="mdn-like") mdn-like
							option(value="midnight") midnight
							option(value="monokai") monokai
							option(value="neat") neat
							option(value="neo") neo
							option(value="night") night
							option(value="paraiso-dark") paraiso-dark
							option(value="paraiso-light") paraiso-light
							option(value="pastel-on-dark") pastel-on-dark
							option(value="rubyblue") rubyblue
							option(value="seti") seti
							option(value="solarized dark") solarized dark
							option(value="solarized light") solarized light
							option(value="the-matrix") the-matrix
							option(value="tomorrow-night-bright") tomorrow-night-bright
							option(value="tomorrow-night-eighties") tomorrow-night-eighties
							option(value="ttcn") ttcn
							option(value="twilight") twilight
							option(value="vibrant-ink") vibrant-ink
							option(value="xq-dark") xq-dark
							option(value="xq-light") xq-light
							option(value="yeti") yeti
							option(value="zenburn") zenburn
					hr
					div
						button.btn.btn-primary.btn-sm.pull-right(type="button", onclick="controller.saveScriptEditorConfig();") save
						div.clearfix

	div.row
		div.col-lg-6.col-md-12
			div.panel.panel-default
				div.panel-heading
					span.glyphicon.glyphicon-cog
					span derby database
				div.panel-body
					div.input-group
						span.input-group-addon sql
						input.form-control#derby-query(type="text")
					hr
					button.btn.btn-default.pull-right(type="button", onclick="controller.queryDerbyDb();") query

		div.col-lg-6.col-md-12
			div.panel.panel-default
				div.panel-heading
					span.glyphicon.glyphicon-cog
					span crypto
				div.panel-body
					div.input-group
						span.input-group-addon text
						input.form-control#crypto-text(type="text")
					hr
					button.btn.btn-default.pull-right(type="button", onclick="controller.crypto({type: 'encrypt'});") encrypt
					button.btn.btn-default.pull-right(type="button", onclick="controller.crypto({type: 'decrypt'});") decrypt


	
block footer
	- scriptEditorTheme = configs.getString("script.editor.theme");
	- versionCheck = configs.getString("version.check");
	script.
		//version check
		$('input[type="radio"][name="version-check"][value="#{versionCheck}"]').attr('checked', 'true');
		//script editor theme
		$('select#select-script-editor-theme option[value="#{scriptEditorTheme}"]').attr('selected', 'true');

	script(src="/js/config.js")